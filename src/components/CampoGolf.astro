---
const title = "Exclusivo Campo de Golf";
const description = "Descubre la experiencia de vivir en una residencial de lujo con un campo de golf. Disfruta de greens perfectos y un estilo de vida inigualable. Nuestro campo de golf está diseñado para ofrecerte lo mejor en entretenimiento y relajación.";
const buttonText = "Conoce más";
const buttonLink = "#AMENIDADES";

// Datos de las miniseciones
const miniSections = [
  {
    imageUrl: '/img/CampoGolf/1.jpg',
    phrase: '9 hoyos completos',
  },
  {
    imageUrl: '/img/CampoGolf/2.jpg',
    phrase: 'Campo iluminado',
  },
  {
    imageUrl: '/img/CampoGolf/3.jpg',
    phrase: 'Disponibilidad 24 hrs',
  },
  {
    imageUrl: '/img/CampoGolf/4.jpg',
    phrase: 'Lagos artificiales',
  },
];
---

<style>
  .golf-section {
    position: relative;
    padding: 4rem 2rem;
    background-image: url('/img/CampoGolf/CampoGolf.jpg');
    background-size: cover;
    background-position: center;
    color: white;
    text-align: center;
    background-color: rgba(255, 255, 255, 0.8); /* Fondo blanco translúcido */
  }

  .overlay {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: rgba(0, 0, 0, 0.3); /* Oscurecimiento más ligero */
    z-index: 1;
  }

  .content {
    position: relative;
    z-index: 2;
    max-width: 800px;
    margin: 0 auto;
    background-color: rgba(255, 255, 255, 0.9); /* Fondo blanco translúcido para el contenido */
    padding: 2rem;
    border-radius: 0.5rem;
  }

  h2 {
    font-size: 2rem;
    font-weight: 600;
    margin-bottom: 1rem;
    color: #333; /* Color de texto más oscuro para contraste */
  }

  p {
    font-size: 1.125rem;
    margin-bottom: 2rem;
    color: #555; /* Color de texto más claro */
  }

  .button {
    display: inline-block;
    padding: 0.75rem 2rem;
    background-color: #00aaff;
    color: white;
    border-radius: 0.5rem;
    text-decoration: none;
    font-size: 1.125rem;
    transition: background-color 0.3s ease;
    font-weight: 500;
  }

  .button:hover {
    background-color: #007acc;
  }

  /* Estilos para las miniseciones */
  .mini-section-container {
    display: flex;
    flex-wrap: wrap;
    gap: 1rem;
    justify-content: center;
    padding: 1rem;
  }

  .mini-section {
    flex: 1 0 21%; /* Ocupa el 21% del ancho en pantallas grandes */
    height: 150px; /* Altura ajustada para escritorio */
    background-size: cover;
    background-position: center;
    display: flex;
    align-items: center;
    justify-content: center;
    color: white;
    text-align: center;
    position: relative;
    border-radius: 0.5rem;
    overflow: hidden;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2); /* Sombra sutil */
  }

  .mini-section .overlay {
    background-color: rgba(0, 0, 0, 0.3); /* Oscurecimiento más ligero */
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 1;
  }

  .mini-section h3 {
    font-size: 1.25rem;
    z-index: 2;
    margin: 0;
    color: white;
  }

  .mini-section img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.3s ease;
  }

  .mini-section:hover img {
    transform: scale(1.05); /* Zoom sutil en la imagen al pasar el ratón */
  }

  @media (max-width: 768px) {
    .mini-section {
      flex: 1 0 100%;
      height: 120px;
    }
  }
</style>
<div style="background-color: rgb(255, 255, 255);" id="CAMPODEGOLF">
  <section class="golf-section" >
    <div class="overlay"></div>
    <div class="content"data-aos="zoom-in-up"data-aos-easing="linear"
    data-aos-duration="1500">
      <h2 class="">{title}</h2>
      <p>{description}</p>
      <a href={buttonLink} class="button">{buttonText}</a>
    </div>
  </section>
  
  <div class="mini-section-container">
    {miniSections.map(section => (
      <div class="mini-section" style={{ backgroundImage: `url(${section.imageUrl})` }} data-aos="fade-up"data-aos-easing="linear"
      data-aos-duration="500">
        <div class="overlay"></div>
        <h3>{section.phrase}</h3>
      </div>
    ))}
  </div>
</div>

