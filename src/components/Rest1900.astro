---
import i18next, { t } from "i18next";
const menuImage = "/img/Restaurant.jpg"; 
const menuLink = "/img/Menu1900.png"; 
---

<div class="bg-white p-6" id="REST1900">
  <div class="max-w-6xl mx-auto p-6 bg-white rounded-lg space-y-6">
    <!-- Título principal -->
    <h2 class="text-4xl font-extrabold text-center text-black mb-8 relative" data-aos="fade-up" data-aos-easing="linear" data-aos-duration="500">
      {t("rest.title")}
      <span class="block w-24 mx-auto mt-4 h-1 bg-gray-200 rounded-full"></span>
    </h2>
    
    <div class="flex flex-col lg:flex-row items-center lg:items-start space-y-6 lg:space-y-0 lg:space-x-6">
      <!-- Sección de la descripción y el botón, centrados -->
      <div class="lg:w-1/2 text-center lg:text-center" data-aos="fade-up" data-aos-easing="linear" data-aos-duration="500">
        <p class="text-gray-700 mb-6 leading-relaxed">
          {t("rest.descripcion")}
        </p>

        <!-- Botón centrado junto a la descripción -->
        <div class="text-center lg:text-center" data-aos="fade-up" data-aos-easing="linear" data-aos-duration="500">
          <a href={menuLink} download class="bg-primary text-white px-4 py-2 mt-4 rounded-lg hover:bg-blue-600 transition-colors text-center inline-block">
            {t("rest.buto")}
          </a>
        </div>
      </div>
      
      <!-- Sección de la imagen -->
      <div class="lg:w-1/2" data-aos="fade-up" data-aos-easing="linear" data-aos-duration="500">
        <img src={menuImage} alt="Imagen del restaurante" class="w-full rounded-lg mb-4 object-cover h-auto"/>
      </div>
    </div>
  </div>
</div>

