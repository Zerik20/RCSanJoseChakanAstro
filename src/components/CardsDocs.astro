---
const { title, imgSrc, fileUrl, fileUrl2, buttonText, buttonText2 } = Astro.props;
import i18next, { t } from "i18next";
---

<div class="p-4 border rounded-lg shadow-lg dark:border-gray-600 dark:bg-gray-800 transition-transform transform hover:scale-105 hover:shadow-xl hover:shadow-red-300 dark:hover:shadow-red-800 ease-in-out duration-300">
    <h4 class="text-lg font-semibold text-gray-900 dark:text-white">{title}</h4>
    <img src={imgSrc} alt={title} class="mt-2 mb-4 w-full h-auto object-cover" />
    <div class="flex flex-wrap gap-2 mt-2">
        {fileUrl ? (
            <a href={fileUrl} target="_blank" class="inline-block text-white bg-primary hover:bg-red-900 focus:ring-4 focus:outline-none focus:ring-blue-300 font-medium rounded-lg text-sm px-3 py-1.5 text-center dark:bg-blue-500 dark:hover:bg-blue-600 dark:focus:ring-blue-800">
                {buttonText}
            </a>
        ) : ''}
        {fileUrl2 ? (
            <a href={fileUrl2} target="_blank" class="inline-block text-white bg-primary hover:bg-red-900 focus:ring-4 focus:outline-none focus:ring-blue-300 font-medium rounded-lg text-sm px-3 py-1.5 text-center dark:bg-blue-500 dark:hover:bg-blue-600 dark:focus:ring-blue-800">
                {buttonText2}
            </a>
        ) : ''}
    </div>
</div>
