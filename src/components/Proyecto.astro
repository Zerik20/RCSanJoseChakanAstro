---
import i18next, { t } from "i18next";

const descripcion2 = t("Proyecto.descripcion2");
---
<section class="Proyecto-section" id="PROYECTO">
  <div class="Proyecto-content" data-aos="fade-right" data-aos-easing="linear" data-aos-duration="1500">
    <h2 class="Proyecto-title">{t("Proyecto.title")}</h2>
    <p class="Proyecto-description">{t("Proyecto.descripcion1")}</p>
    <p class="Proyecto-description" set:html={descripcion2}></p>
    <a href="#CONTACTO" class="Proyecto-button  bg-primary text-white hover:bg-red-900 ">{t("Proyecto.cont")}</a>
    <a href="https://maps.app.goo.gl/aRgs51r9dekXdGoY9" target="_blank" class="Proyecto-button  bg-primary text-white hover:bg-red-900 ">{t("Proyecto.ubi")}</a>
  </div>
  <div class="Proyecto-image" data-aos="fade-left" data-aos-easing="linear" data-aos-duration="1500">
    <img src="/img/Proyecto/Proyecto.jpg" alt="Imagen representativa de Proyecto" />
  </div>
</section>

<style>
  .Proyecto-section {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 4rem 2rem;
    background: linear-gradient(to bottom, #ffffff, #f7f3e9);
    height: 100vh;
    position: relative;
  }

  .Proyecto-section::before {
    content: "";
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-image: url('/img/Proyecto/Campo.jpg');
    background-size: cover;
    background-position: center;
    opacity: 0.15;
    z-index: 0;
  }

  .Proyecto-content {
    flex: 1;
    padding: 2rem;
    z-index: 1;
    text-align: left;
  }

  .Proyecto-title {
    font-size: 2.5rem;
    font-weight: bold;
    color: #0c2e20; /* Verde oscuro para el título */
    margin-bottom: 1rem;
    font-family: 'Georgia', serif; /* Fuente elegante */
  }

  .Proyecto-description {
    font-size: 1.2rem;
    color: #555; /* Gris tenue para el texto */
    margin-bottom: 1.5rem;
    line-height: 1.6;
    font-family: 'Arial', sans-serif;
  }

  .Proyecto-description b {
    color: #0c2e20; /* Resalta en verde oscuro las palabras importantes */
  }

  .Proyecto-button {
    display: inline-block;
    padding: 0.75rem 1.5rem;
    text-decoration: none;
    border-radius: 25px;
    font-weight: 600;
    margin-right: 1rem;
    transition: transform 0.3s, background-color 0.3s;
  }

  .Proyecto-button:hover {
    transform: scale(1.05);
  }

  .Proyecto-image {
    flex: 1;
    display: flex;
    justify-content: center;
    align-items: center;
    padding: 2rem;
    z-index: 2; /* La imagen está sobre otros elementos */
  }

  .Proyecto-image img {
    max-width: 60%;
    height: auto;
    border-radius: 15px;
    box-shadow: 0 10px 30px rgba(0, 0, 0, 0.2);
    transition: transform 0.3s;
  }

  .Proyecto-image img:hover {
    transform: scale(1.02);
  }

  @media (max-width: 768px) {
    .Proyecto-section {
      flex-direction: column;
      text-align: center;
      height: auto;
      padding: 2rem;
    }

    .Proyecto-content {
      margin-bottom: 2rem;
      text-align: center;
    }

    .Proyecto-image img {
      max-width: 100%;
    }
  }
</style>
