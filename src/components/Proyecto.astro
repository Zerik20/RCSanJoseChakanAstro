---
import i18next, { t } from "i18next";

const descripcion2 = t("Proyecto.descripcion2");
---
<section id="PROYECTO" class="relative flex flex-col md:flex-row items-center justify-between p-8 bg-gradient-to-b from-white to-[#f7f3e9] h-auto md:h-[100vh]">
  <!-- Fondo con imagen -->
  <div class="absolute inset-0 bg-cover bg-center opacity-15 z-0" style="background-image: url('/img/Proyecto/Campo.jpg');"></div>

  <!-- Contenido de texto -->
  <div class="flex-1 z-10 p-4 text-left space-y-4">
    <h2 class="text-3xl md:text-4xl font-bold text-[#0c2e20]">{t("Proyecto.title")}</h2>
    <p class="text-lg text-gray-700 leading-relaxed">{t("Proyecto.descripcion1")}</p>
    <p class="text-lg text-gray-700 leading-relaxed" set:html={descripcion2}></p>
    <div class="flex space-x-4">
      <a href="#CONTACTO" class="bg-primary text-white hover:bg-red-900 px-6 py-3 rounded-lg font-semibold transition duration-300">{t("Proyecto.cont")}</a>
      <a href="https://maps.app.goo.gl/aRgs51r9dekXdGoY9" target="_blank" class="bg-primary text-white hover:bg-red-900 px-6 py-3 rounded-lg font-semibold transition duration-300">{t("Proyecto.ubi")}</a>
    </div>
  </div>

  <!-- Imagen del proyecto -->
  <div class="flex-1 z-10 flex justify-center items-center p-4 relative overflow-hidden">
    <img src="/img/Proyecto/Proyecto.jpg" alt="Imagen representativa de Proyecto" class="w-full max-w-[60%] h-auto object-contain rounded-lg shadow-lg transition-transform duration-300 hover:scale-105" />
  </div>
</section>
