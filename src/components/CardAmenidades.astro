---
const { title, description, imageUrl, link } = Astro.props;
---

<div class="card-amenidades">
    <a href={link} class="card-image-wrapper">
        <img class="card-image" src={imageUrl} alt={title} />
    </a>
    <div class="card-content">
        <a href={link}>
            <h5 class="card-title">{title}</h5>
        </a>
        <p class="card-description">{description}</p>
    </div>
</div>

<style>
  .card-amenidades {
    background: white;
    border: 1px solid #e0e0e0;
    border-radius: 12px;
    box-shadow: 0 6px 16px rgba(0, 0, 0, 0.2);
    display: flex;
    flex-direction: column;
    height: 100%;
    overflow: hidden;
    aspect-ratio: 4 / 5;
    transition: transform 0.3s ease, box-shadow 0.3s ease;
  }

  .card-image-wrapper {
    width: 100%;
    height: 60%; /* Espacio predefinido para la imagen */
    overflow: hidden;
    position: relative;
  }

  .card-image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.5s ease;
  }

  .card-content {
    padding: 20px;
    flex-grow: 1;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
  }

  .card-title {
    font-size: 1.25rem; /* Espacio predefinido para el título */
    font-weight: bold;
    color: #333;
    margin-bottom: 10px;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
  }

  .card-description {
    font-size: 1rem; /* Espacio predefinido para la descripción */
    color: #555;
    margin-bottom: 20px;
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
  }

  .card-amenidades:hover {
    transform: scale(1.05);
    box-shadow: 0 8px 20px rgba(0, 0, 0, 0.3);
  }

  @media (max-width: 768px) {
    .card-amenidades {
      aspect-ratio: 3 / 4;
    }

    .card-image-wrapper {
      height: 50%;
    }

    .card-title {
      font-size: 1.125rem; /* Ajuste en móvil */
    }

    .card-description {
      -webkit-line-clamp: 2; /* Ajuste en móvil */
    }

    .card-amenidades {
      margin-bottom: 20px; /* Más espacio entre tarjetas en móvil */
    }
  }
</style>
