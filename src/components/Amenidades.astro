    image: "/img/Amenidades/Bar.jpg",
    icon: "/img/Iconossvg/Alcohol.svg",
  },
  {
    name: t("ameni.rest"),
    description: t("ameni.desc3"),
    image: "/img/Amenidades/Restaurante.jpg",
    icon: "/img/Iconossvg/Restaurant.svg",
  },
  {
    name: t("ameni.mascot"),
