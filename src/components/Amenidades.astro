  },
  // ... (resto de las amenidades)
];
---

<div class="bg-white p-6 shadow-md" id="AMENIDADES">
  <h2
    class="text-4xl font-extrabold text-center text-black mb-8 relative"
    data-aos="fade-up"
    data-aos-easing="linear"
    data-aos-duration="500"
  >
    {t("ameni.title")}
    <span class="block w-24 mx-auto mt-4 h-1 bg-gray-200 rounded-full"></span>
  </h2>

  <!-- Contenedor de Amenidades -->
  <div
    class="flex flex-wrap justify-center gap-10"
    data-aos="fade-up"
    data-aos-easing="linear"
    data-aos-duration="500"
  >
    {amenities.map((amenity) => (
      <div
        class="flex flex-col items-center space-y-2 w-32"
      >
        <div class="w-12 h-12 bg-gray-200 rounded-md flex items-center justify-center">
          <img src={amenity.icon} alt={amenity.name} class="w-6 h-6" />
        </div>
        <h3 class="text-base font-semibold text-gray-700 text-center">{amenity.name}</h3>
      </div>
    ))}
  </div>
</div>


<style>
  #AMENIDADES {
    background-color: #f9f9f9;
  }

  h2 span {
    background-color: #e0e0e0;
  }

  .flex div {
    transition: transform 0.3s ease-in-out;
  }

  .flex div:hover {
    transform: scale(1.05);
  }
</style>

  
  
